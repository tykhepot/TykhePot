# TykhePot 环境变量配置
# 复制此文件为 .env 并填写实际值

# ========== 网络配置 ==========
# devnet 或 mainnet
REACT_APP_SOLANA_NETWORK=devnet

# RPC 节点 (建议使用商业节点)
REACT_APP_RPC_ENDPOINT=https://api.devnet.solana.com
# REACT_APP_RPC_ENDPOINT=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY

# ========== 合约配置 ==========
# 部署后从 deploys/devnet-*.json 复制
REACT_APP_PROGRAM_ID=TykhePot111111111111111111111111111111111
REACT_APP_TOKEN_MINT=TPOT11111111111111111111111111111111111111
REACT_APP_STATE_PDA=StatePDA1111111111111111111111111111111111

# ========== 前端配置 ==========
REACT_APP_NAME=TykhePot
REACT_APP_VERSION=1.0.0
REACT_APP_WEBSITE=https://tykhepot.com

# ========== 分析工具 (可选) ==========
# Google Analytics
REACT_APP_GA_TRACKING_ID=G-XXXXXXXXXX

# ========== 功能开关 ==========
# 是否显示测试页面
REACT_APP_ENABLE_TEST_PAGE=true

# 是否启用空投
REACT_APP_ENABLE_AIRDROP=true

# ========== 主网配置 (仅主网部署时) ==========
# REACT_APP_SOLANA_NETWORK=mainnet
# REACT_APP_RPC_ENDPOINT=https://api.mainnet-beta.solana.com
# REACT_APP_PROGRAM_ID=主网程序ID
# REACT_APP_TOKEN_MINT=主网代币地址
# REACT_APP_STATE_PDA=主网状态PDA
